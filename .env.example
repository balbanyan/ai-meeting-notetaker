# Database
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:5432/ai_notetaker_v2

# Backend Configuration
BACKEND_API_URL=http://localhost:8000

# Bot Service Authentication
BOT_SERVICE_TOKEN=dev-bot-token-12345 # your own generated token (for commuinication between bot-runner and backend)

# LEGACY Webex Authentication
WEBEX_GUEST_ISSUER_ID=your-guest-issuer-id
WEBEX_GUEST_ISSUER_SECRET=your-guest-issuer-secret

# Webex Bot Configuration
WEBEX_BOT_ACCESS_TOKEN=your_webex_bot_access_token_here
WEBEX_API_BASE_URL=https://webexapis.com/v1

# Bot Configuration
BOT_DISPLAY_NAME=AI Meeting Notetaker
BOT_EMAIL=ai-notetaker-v2@yourcompany.com


# Bot Runner Configuration
BOT_RUNNER_URL=http://localhost:3001

# Bot Runner Mode Selection
# Options: 'gui' for Electron interface, 'headless' for server mode
BOT_MODE=gui

# Logging
ENABLE_LOGGING=true
